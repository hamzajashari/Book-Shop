@model EShop.Domain.Identity.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="background-color: azure">
    <div>
        @Html.ValidationSummary()
        <section class="contact_section layout_padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 ">
                        <form href="/login" method="POST">
                            <div>
                                <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                                <br>
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                </div>
                            </div>
                            <div>
                                <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>
                                <br>
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(p => p.Password, new { placeholder = "Password", @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12 btn-submit">
                                    <button type="submit" class="btn btn-success">Login</button>
                                    <a href="/register">Don't have an account? <br />Click to Register</a>
                                </div>
                            </div>

                        </form>
                        </div>
                    </div>
             </div>
        </section>
    </div>
</body>